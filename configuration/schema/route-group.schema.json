{
    "$schema": "https://json-schema.org/draft-07/schema",
    "$id": "route-group.schema.json",
    "type": "object",
    "properties": {
        "key": {
            "$ref": "#definitions/identifierDeclaration"
        },
        "ports": {
            "type": "array",
            "items": {
                "type": "integer"
            }
        },
        "hosts": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "authorizations": {
            "type": "array",
            "items": {
                "$ref": "#definitions/identifierDeclaration"
            }
        },
        "route": {
            "$ref": "#definitions/identifierDeclaration"
        },
        "errorRegistryService": {
            "type": "string"
        },
        "weight": {
            "type": "integer",
            "default": 1000
        }
    },
    "required": ["key", "ports", "hosts", "route", "errorRegistryService"],
    "definitions": {
        "identifierDeclaration": {
            "type": "string",
            "pattern": "^[\\w-]+$"
        }
    }
}
