{
    "$schema": "https://json-schema.org/draft-07/schema",
    "$id": "route.schema.json",
    "type": "object",
    "properties": {
        "key": {
            "$ref": "#definitions/identifierDeclaration"
        },
        "path": {
            "type": "string",
            "pattern": "^[\\w\\/{}\\.~-]*$"
        },
        "service": {
            "type": "string"
        },
        "methods": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "authorizations": {
            "type": "array",
            "items": {
                "$ref": "#definitions/identifierDeclaration"
            }
        },
        "outputService": {
            "type": "string"
        },
        "errorRegistryService": {
            "type": "string"
        },
        "parent": {
            "$ref": "#definitions/identifierDeclaration"
        },
        "weight": {
            "type": "integer",
            "default": 1000
        }
    },
    "required": ["path", "service", "key", "methods"],
    "definitions": {
        "identifierDeclaration": {
            "type": "string",
            "pattern": "^[\\w-]+$"
        }
    }
}
